<%- include('../partials/header') %>

<div id="new-plant-page">
  <h1 id="title"><%= title %></h1>
  <h4 class="plant-profile-care">Plant Profile</h4>
  <form id="new-plant-form" action="/plants" method="POST" enctype="multipart/form-data">

    <div class="mb-3">
    <label for="add-new-image" class="form-label">Add plant image:</label>
    <input class="form-control form-control-sm" id="add-new-image" type="file" name="image"/>
    </div>

    <label>Common Name:</label>
    <input class="form-control form-control-sm" type="text" name="commonName" />

    <label>Scientific Name:</label>
    <input class="form-control form-control-sm" type="text" name="scientificName" />

    <label>Adoption Date:</label>
    <input class="form-control form-control-sm" type="date" name="adoptionDate" />

    <label>Location:</label>
    <select class="form-select form-select-sm" name="location">
      <option value="office">office</option>
      <option value="hall">hall</option>
      <option value="kitchen">kitchen</option>
      <option value="bathroom">bathroom</option>
      <option value="terrace">terrace</option>
      <option value="porch">porch</option>
      <option value="balcony">balcony</option>
      <option value="living room">living room</option>
      <option value="patio">patio</option>
      <option value="bedroom">bedroom</option>
      </select>

    <label>Toxicity:</label><br>
    <div class="form-check form-check-inline">
    <input class="form-check-input" name="humanSafe" id="human-safe" type="checkbox"><label for="human-safe">Human-Safe</label>
    </div>
    <div class="form-check form-check-inline">
    <input class="form-check-input" name="petSafe" id="pet-safe" type="checkbox"><label for="pet-safe">Pet-Safe</label>
    </div>

    <h4 class="plant-profile-care">Plant Care</h4>
    <label>Light:</label>
    <select class="form-select form-select-sm" name="light">
      <option value="full sun">full sun</option>
      <option value="part sun">part sun</option>
      <option value="part shade">part shade</option>
      <option value="full shade">full shade</option>
    </select>
    
    <label>Water:</label>
    <input class="form-control form-control-sm" type="text" name="water">

    <label>Ideal Temperature:</label>
    <input class="form-control form-control-sm" type="number" name="idealTemp" min="50" max="90" placeholder="Â°F">

    <label for="new-humidity" class="form-label">Humidity %:</label>
    <input class="form-range" type="range" id="new-humidity" name="humidity" min="0" max="100" step="10">

    <label>Soil:</label>
    <input class="form-control form-control-sm" type="text" name="soil">

    <label>Fertilizer</label>
    <input class="form-control form-control-sm" type="text" name="fertilizer">

    <label>Propagation</label>
    <select class="form-select form-select-sm" name="propagation">
        <option value="seeds">seeds</option>
        <option value="bulbs">bulbs</option>
        <option value="food scraps">food scraps</option>
        <option value="cuttings">cuttings</option>
        <option value="layering">layering</option>
        <option value="grafting">grafting</option>
    </select><br>

    <button class="btn btn-success btn-sm" type="submit">Add Plant</button>
  </form>
</div>
  <%- include('../partials/footer') %>