<%- include('../partials/header') %>
<body>
  <h2>Plant Profile</h2>
  <form id="new-plant-form" action="/plants" method="POST" enctype="multipart/form-data">


    <label>Image:</label>
    <input type="file" name="image" /><br />

    <label>Common Name:</label>
    <input type="text" name="commonName" /><br />

    <label>Scientific Name:</label>
    <input type="text" name="scientificName" /><br />

    <label>Adoption Date:</label>
    <input type="date" name="adoptionDate" /><br />

    <label>Location:</label>
    <select name="location">
      <option value="office">office</option>
      <option value="hall">hall</option>
      <option value="kitchen">kitchen</option>
      <option value="bathroom">bathroom</option>
      <option value="terrace">terrace</option>
      <option value="porch">porch</option>
      <option value="balcony">balcony</option>
      <option value="living room">living room</option>
      <option value="patio">patio</option>
      <option value="bedroom">bedroom</option></select
    ><br />

    <label>Toxicity:</label>
    <input name="humanSafe" type="checkbox"><label>Human-Safe</label>
    <input name="petSafe" type="checkbox"><label>Pet-Safe</label>

    <h2>Plant Care</h2>
    <label>Light:</label>
    <select name="light">
      <option value="full sun">full sun</option>
      <option value="part sun">part sun</option>
      <option value="part shade">part shade</option>
      <option value="full shade">full shade</option></select
    ><br />

    <label>Water:</label>
    <input type="text" name="water"><br>

    <label>Ideal Temperature:</label>
    <input type="number" name="idealTemp" min="50" max="90"> Â°F<br>

    <label>Humidity:</label>
    <input type="range" id="humidity" name="humidity" min="0" max="100" step="10">%<br>

    <label>Soil:</label>
    <input type="text" name="soil"><br>

    <label>Fertilizer</label>
    <input type="text" name="fertilizer"><br>

    <label>Propagation</label>
    <select name="propagation">
        <option value="seeds">seeds</option>
        <option value="bulbs">bulbs</option>
        <option value="food scraps">food scraps</option>
        <option value="cuttings">cuttings</option>
        <option value="layering">layering</option>
        <option value="grafting">grafting</option>
    </select><br>

    <input type="submit" value="Add Plant" />
  </form>
  <!-- Bootstrap JS file Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
